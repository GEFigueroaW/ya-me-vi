rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGLAS TEMPORALES PARA DEBUG - ACCESO TOTAL PARA USUARIOS AUTENTICADOS
    // Esto nos permitirá identificar el problema y ver qué usuarios reales tienes
    
    match /{document=**} {
      // Permitir lectura completa para cualquier usuario autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura para usuarios autenticados (para testing)
      allow write: if request.auth != null;
    }
  }
}